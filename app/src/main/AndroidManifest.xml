<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dhanas.android.periodical">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.dhanas.android.periodical.AppPeriodical"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/periodical"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.dhanas.android.periodical.login.ForgetPasswordActivity"></activity>
        <activity android:name="com.dhanas.android.periodical.login.SignupActivity" />
        <activity android:name="com.dhanas.android.periodical.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dhanas.android.periodical.MainActivity"
            android:theme="@style/SplashTheme" />
        <activity
            android:name="com.dhanas.android.periodical.MainActivityApp"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dhanas.android.periodical.DetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/details_title" />
        <activity
            android:name="com.dhanas.android.periodical.ListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/list_title" />
        <activity
            android:name="com.dhanas.android.periodical.ListDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/list_details_title" />
        <activity
            android:name="com.dhanas.android.periodical.PreferenceActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/options_title" />
        <activity
            android:name="com.dhanas.android.periodical.HelpActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/help_title" />
        <activity
            android:name="com.dhanas.android.periodical.AboutActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/about_title" />

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIC54Akxjv9DZ71SEaObLVvtC_2t4sBM0GPgC8Fg" />
    </application>

</manifest>